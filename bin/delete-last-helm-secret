#!/bin/bash

# Verifica se os argumentos foram passados
if [ $# -ne 2 ]; then
  echo "Uso: $0 <NAMESPACE> <RELEASE_NAME>"
  exit 1
fi

NAMESPACE="$1"
RELEASE_NAME="$2"

# Lista os secrets do Helm para a release espec√≠fica, ordena e pega o √∫ltimo
LAST_SECRET=$(kubectl get secrets -n "$NAMESPACE" --no-headers | grep "sh.helm.release.v1.$RELEASE_NAME" | awk '{print $1}' | sort -V | tail -n 1)

# Verifica se encontrou um secret
if [ -z "$LAST_SECRET" ]; then
  echo "‚úÖ Nenhum secret do Helm encontrado para '$RELEASE_NAME' no namespace '$NAMESPACE'."
  exit 0
fi

# Exclui o √∫ltimo secret
echo "‚ùå Removendo o √∫ltimo secret do Helm: $LAST_SECRET"
kubectl delete secret -n "$NAMESPACE" "$LAST_SECRET"

echo "üéâ √öltimo secret do Helm removido com sucesso!"